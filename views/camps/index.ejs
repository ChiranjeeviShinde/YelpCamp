<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Camps</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles2.css" />
  </head>

  <body>
    <h1 class="heading">Search and View Our Campgrounds</h1>
    <div class="search-bar">
    <div class="input-group mb-3">
      <input
        type="text"
        class="form-control"
        placeholder="Search for a campground"
        aria-label="Search"
        aria-describedby="basic-addon1"
      />
    </div>
    </div>
    <ul>
      <% for(let camp of camps) { %>
      <div class="card mb-3" style="max-width: 540px">
        <div class="row g-0">
          <div class="col-md-4">
            <img
              src="https://images.unsplash.com/photo-1504280390367-361c6d9f38f4?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8Y2FtcGluZ3xlbnwwfHwwfHx8MA%3D%3D"
              class="img-fluid rounded-start"
              alt="..."
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= camp.name %></h5>
              <p class="card-text"><%=camp.description%></p>
            </div>
          </div>
        </div>
      </div>
      <% }%>
    </ul>
    <a class="btn btn-dark new" href="/camps/new" role="button">New Camp</a>
    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
